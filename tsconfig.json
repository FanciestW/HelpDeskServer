{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.gql"
    ],
    "exclude": [
        "node_modules"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
}